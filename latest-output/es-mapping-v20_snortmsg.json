{
    "index_patterns": "snort*",
    "settings": {
        "number_of_shards": "1",
        "number_of_replicas": "1",
        "index.refresh_interval": "5s"
    },
    "mappings": {
        "properties": {
            "@timestamp": {
                "type": "date"
            },
            "@version": {
                "type": "keyword"
            },
            "geo": {
                "properties": {
                    "location": {
                        "type": "geo_point"
                    }
                }
            },
            "source": {
                "properties": {
                    "geo": {
                        "properties": {
                            "location": {
                                "type": "geo_point"
                            }
                        }
                    }
                }
            },
            "destination": {
                "properties": {
                    "geo": {
                        "properties": {
                            "location": {
                                "type": "geo_point"
                            }
                        }
                    }
                }
            },
            "host": {
                "properties": {
                    "geo": {
                        "properties": {
                            "location": {
                                "type": "geo_point"
                            }
                        }
                    }
                }
            },
            "observer": {
                "properties": {
                    "geo": {
                        "properties": {
                            "location": {
                                "type": "geo_point"
                            }
                        }
                    }
                }
            },
            "event": {
                "properties": {
                    "id": {
                        "type": "keyword"
                    }
                }
            },
            "rsa": {
                "properties": {
                    "header": {
                        "properties": {
                            "id": {
                                "type": "keyword"
                            }
                        }
                    },
                    "message": {
                        "properties": {
                            "id1": {
                                "type": "keyword"
                            },
                            "id2": {
                                "type": "keyword"
                            }
                        }
                    }
                }
            },
            "action": {
                "type": "keyword"
            },
            "bytes": {
                "type": "long"
            },
            "checksum": {
                "type": "keyword"
            },
            "daddr": {
                "type": "ip"
            },
            "dport": {
                "type": "integer"
            },
            "duration": {
                "type": "double"
            },
            "filename_size": {
                "type": "integer"
            },
            "hostid": {
                "type": "keyword"
            },
            "hostip": {
                "type": "ip"
            },
            "id": {
                "type": "keyword"
            },
            "msg_id": {
                "type": "keyword"
            },
            "rbytes": {
                "type": "long"
            },
            "resultcode": {
                "type": "keyword"
            },
            "saddr": {
                "type": "ip"
            },
            "sbytes": {
                "type": "long"
            },
            "sigid": {
                "type": "integer"
            },
            "version": {
                "type": "keyword"
            }
        }
    }
}